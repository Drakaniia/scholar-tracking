// Prisma Schema for Scholarship Tracking System
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// STUDENT MODEL
// ============================================
model Student {
  id        Int     @id @default(autoincrement()) @map("student_id")
  studentNo String  @map("student_no")
  fullName  String  @map("full_name")
  program   String
  yearLevel String  @map("year_level")
  email     String
  status    String

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  applications Application[]

  @@map("students")
}

// ============================================
// SCHOLARSHIP MODEL
// ============================================
model Scholarship {
  id               Int     @id @default(autoincrement()) @map("scholarship_id")
  scholarshipName  String  @map("scholarship_name")
  sponsor          String
  type             String
  amount           Decimal @db.Decimal(10, 2)
  requirements     String?
  status           String

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  applications Application[]

  @@map("scholarships")
}

// ============================================
// APPLICATION MODEL
// ============================================
model Application {
  id              Int      @id @default(autoincrement()) @map("application_id")
  applicationDate DateTime @map("application_date")
  status          String
  remarks         String?
  studentId       Int      @map("student_id")
  scholarshipId   Int      @map("scholarship_id")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  student     Student     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  scholarship Scholarship @relation(fields: [scholarshipId], references: [id], onDelete: Cascade)
  award       Award?

  @@map("applications")
}

// ============================================
// AWARD MODEL
// ============================================
model Award {
  id            Int      @id @default(autoincrement()) @map("award_id")
  awardDate     DateTime @map("award_date")
  startTerm     String   @map("start_term")
  endTerm       String   @map("end_term")
  grantAmount   Decimal  @map("grant_amount") @db.Decimal(10, 2)
  applicationId Int      @unique @map("application_id")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  application   Application    @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  disbursements Disbursement[]

  @@map("awards")
}

// ============================================
// DISBURSEMENT MODEL
// ============================================
model Disbursement {
  id               Int      @id @default(autoincrement()) @map("disbursement_id")
  disbursementDate DateTime @map("disbursement_date")
  amount           Decimal  @db.Decimal(10, 2)
  term             String
  method           String
  awardId          Int      @map("award_id")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  award Award @relation(fields: [awardId], references: [id], onDelete: Cascade)

  @@map("disbursements")
}
